{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",   // Route API requests to the Express server
      "dest": "index.js"
    },
    {
      "src": "/(.*)",       // Serve static assets from the dist folder
      "dest": "dist/$1"
    },
    {
      "handle": "filesystem" // Let Vercel handle any static files in dist/
    }
  ]
}
